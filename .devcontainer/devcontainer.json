{
    "name": "ERA",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "..",
        "args": {
            "NODE_VERSION": "lts/*"
        }
    },
    "customizations": {
        "vscode": {
            "settings": {
                "editor.formatOnSave": true,
                "editor.formatOnSaveTimeout": 2000,
                "editor.codeActionsOnSave": {
                    "source.fixAll": "explicit",
                    "source.fixAll.eslint": "explicit",
                    "source.organizeImports": "explicit"
                },
                "files.autoSave": "afterDelay",
                "files.autoSaveDelay": 5000,
                "python.formatting.provider": "black",
                "python.linting.enabled": true,
                "python.linting.flake8Enabled": true,
                "python.linting.pylintEnabled": true,
                "python.testing.pytestEnabled": true,
                "python.testing.pytestArgs": [
                    "--cov",
                    "."
                ],
                "python.sortImports.args": [
                    "--profile",
                    "black"
                ],
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "eslint.format.enable": true,
                "java.format.enabled": true,
                "java.format.onType.enabled": true,
                "java.format.settings.url": ".vscode/java-formatter.xml",
                "java.format.settings.profile": "GoogleStyle",
                "editor.formatOnPaste": true,
                "editor.formatOnType": true,
                "eslint.validate": [
                    "javascript",
                    "javascriptreact",
                    "typescript",
                    "typescriptreact"
                ],
                "prettier.requireConfig": true,
                "prettier.configPath": ".prettierrc"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-python.flake8",
                "ms-python.jedi-language-server",
                "vscjava.vscode-java-pack",
                "vscjava.vscode-java-debug",
                "redhat.java",
                "vscjava.vscode-maven",
                "vscjava.vscode-java-dependency",
                "vscjava.vscode-java-test",
                "vscjava.vscode-spring-initializr",
                "vscjava.vscode-spring-boot-dashboard",
                "n8n-io.n8n-snippets",
                "n8nio.n8n-designer",
                "n8nio.n8n-workflow-ui",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "GitHub.copilot-labs",
                "eamodio.gitlens",
                "ms-vsliveshare.vsliveshare",
                "ms-toolsai.jupyter",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "octokit.octokit-cli",
                "ms-kubernetes-tools.vscode-kubernetes-tools",
                "redhat.vscode-yaml",
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                "PKief.material-icon-theme",
                "hoovercj.vscode-settings-cycler"
            ]
        }
    },
    "workspaceFolder": "/workspaces/ERA",
    "mounts": [
        {
            "source": "${localEnv:HOME}/.ssh",
            "target": "/home/node/.ssh",
            "type": "bind"
        },
        {
            "source": "/var/run/docker.sock",
            "target": "/var/run/docker.sock",
            "type": "bind"
        }
    ],
    "portsAttributes": {
        "5678": {
            "label": "n8n",
            "onAutoForward": "notify"
        },
        "80": {
            "label": "Nginx",
            "onAutoForward": "notify"
        },
        "8080": {
            "label": "n8n Designer",
            "onAutoForward": "notify"
        },
        "8081": {
            "label": "n8n Workflow UI",
            "onAutoForward": "notify"
        },
        "4500": {
            "label": "n8n Web UI",
            "onAutoForward": "openBrowser"
        }
    },
    "initializeCommand": "git config --global user.name \"${localEnv:GIT_USER_NAME}\" && git config --global user.email \"${localEnv:GIT_USER_EMAIL}\"",
    "postCreateCommand": "chown -R node:node /workspaces/ERA && chmod 755 /workspaces/ERA && chmod +x scripts/setup.sh && bash scripts/setup.sh",
    "remoteUser": "node",
    "updateRemoteUserUID": true
}