{
    "name": "Node.js & Python",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:1-18-bullseye",

    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.9",
            "installTools": true,
            "installPytest": true,
            "installPylint": true
        },
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20.17.0",
            "nodeGypDependencies": true
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest",
            "ppa": true
        }
    },

    "customizations": {
        "vscode": {
            "settings": {
                // Отключаем глобальное форматирование
                "editor.formatOnSave": false,
                "editor.formatOnPaste": false,
                "editor.formatOnType": false,

                // Специфичные настройки для языков
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit",
                        "source.fixAll.pylint": "explicit",
                        "source.fixAll.flake8": "explicit"
                    }
                },
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.linting.flake8Enabled": true,
                "python.linting.mypyEnabled": true,
                "python.sortImports.args": ["--profile", "black"],
                "python.formatting.blackPath": "black",
                "python.formatting.blackArgs": ["--line-length", "88"],
                "isort.args": [
                    "--profile", "black",
                    "--line-length", "88"
                ],
                "isort.check": true,
                // Отключаем autopep8 чтобы не конфликтовал с black
                "python.formatting.autopep8Path": "none",
                "[typescript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.fixAll.eslint": "explicit"
                    }
                },
                "[javascript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.fixAll.eslint": "explicit"
                    }
                },

                // Остальные настройки форматирования отключаем
                "eslint.format.enable": false,
                "python.formatting.provider": "none",

                "editor.codeActionsOnSave": {
                    "source.fixAll": "explicit",
                    "source.fixAll.eslint": "explicit",
                    "source.organizeImports": "explicit",
                    "source.sortMembers": "explicit"
                },
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "files.autoSave": "afterDelay",
                "files.autoSaveDelay": 5000,
                "eslint.enable": true,
                "eslint.run": "onType",
                "eslint.lintTask.enable": true,
                "eslint.codeActionsOnSave.mode": "all",
                "npm.packageManager": "yarn",
                "eslint.validate": [
                    "javascript",
                    "javascriptreact", 
                    "typescript",
                    "typescriptreact"
                ],
                "[javascriptreact]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true
                },
                "[typescriptreact]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true
                },
                "terminal.integrated.defaultProfile.linux": "bash",
                "git.enableSmartCommit": true,
                "files.eol": "\n"
            },
            "extensions": [
                "streetsidesoftware.code-spell-checker",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "ms-azuretools.vscode-docker",
                "GitHub.copilot-chat",
                "Continue.continue",
                "swagatachaudhuri.github-copilot-tools-pack",
                "github.copilot-workspace",
                "eamodio.gitlens",
                "ms-vscode.vscode-speech-language-pack-ru-ru",
                "hbenl.vscode-jasmine-test-adapter",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "formulahendry.auto-rename-tag",
                "formulahendry.auto-close-tag",
                "christian-kohler.path-intellisense",
                "visualstudioexptteam.vscodeintellicode",
                "google.geminicodeassist",
                "ms-python.autopep8",
                "ms-python.flake8",
                "ms-python.isort"
            ]
        }
    },

    "workspaceFolder": "/workspaces/ERA",
    
    "mounts": [
        "source=${localEnv:HOME}/.ssh,target=/home/node/.ssh,type=bind,consistency=cached,readonly"
    ],

    "remoteUser": "node",
    "updateRemoteUserUID": true,

    "portsAttributes": {
        "3000": {
            "label": "Local Development",
            "onAutoForward": "notify"
        },
        "4000": {
            "label": "Remote Access",
            "onAutoForward": "notify",
            "visibility": "public"
        }
    },
    
    "forwardPorts": [3000, 4000],

    "postCreateCommand": {
        "init": "python -m pip install --upgrade pip",
        "node-setup": "npm install -g yarn typescript ts-node && yarn global add npm@latest",
        "project-setup": "yarn install && yarn run setup",
        "start-watch": "yarn structure:watch &"
    },
    
    "initializeCommand": "git config --global user.name 'Oleg Kizyma' && git config --global user.email 'oleg1203@gmail.com'"
}
