{
    "name": "Node.js & Python",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:20-bookworm",

    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.12",
            "installTools": true,
            "installPytest": true,
            "installPylint": true
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest",
            "ppa": true
        }
    },

    "postCreateCommand": "python -m pip install --upgrade pip && yarn install",
    "postStartCommand": "pip install pytest pylint black python-dotenv requests autopep8 flake8 isort mypy && yarn install",

    "customizations": {
        "vscode": {
            "settings": {
                "editor.formatOnSave": false,
                "editor.formatOnPaste": false,
                "editor.formatOnType": false,
                "editor.accessibilitySupport": "on", 
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit",
                        "source.fixAll.pylint": "explicit",
                        "source.fixAll.flake8": "explicit"
                    }
                },
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.linting.flake8Enabled": true,
                "python.linting.mypyEnabled": true,
                "python.sortImports.args": ["--profile", "black"],
                "python.formatting.blackPath": "black",
                "python.formatting.blackArgs": ["--line-length", "88"],
                "isort.args": [
                    "--profile",
                    "black",
                    "--line-length",
                    "88"
                ],
                "isort.check": true,
                "python.formatting.autopep8Path": "none",
                "[typescript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.fixAll.eslint": "explicit"
                    }
                },
                "[javascript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.fixAll.eslint": "explicit"
                    }
                },
                "eslint.format.enable": false,
                "python.formatting.provider": "none",
                "editor.codeActionsOnSave": {
                    "source.fixAll": "explicit",
                    "source.fixAll.eslint": "explicit",
                    "source.organizeImports": "explicit",
                    "source.sortMembers": "explicit"
                },
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "files.autoSave": "afterDelay",
                "files.autoSaveDelay": 5000,
                "eslint.enable": true,
                "eslint.run": "onType",
                "eslint.lintTask.enable": true,
                "eslint.codeActionsOnSave.mode": "all",
                "npm.packageManager": "yarn",
                "eslint.validate": [
                    "javascript",
                    "javascriptreact",
                    "typescript",
                    "typescriptreact"
                ],
                "[javascriptreact]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true
                },
                "[typescriptreact]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode",
                    "editor.formatOnSave": true
                },
                "terminal.integrated.defaultProfile.linux": "bash",
                "git.enableSmartCommit": true,
                "files.eol": "\n",
                "files.exclude": {
                    "**/.git": true,
                    "**/.svn": true,
                    "**/.hg": true,
                    "**/CVS": true,
                    "**/.DS_Store": true,
                    "**/node_modules": true
                },
                "files.watcherExclude": {
                    "**/.git/**": true,
                    "**/node_modules/**": true,
                    "**/bower_components/**": true
                },
                "readonly.files": [
                    "**/node_modules/**",
                    "**/.git/**"
                ]
            },
            "extensions": [
                "streetsidesoftware.code-spell-checker",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "ms-azuretools.vscode-docker",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "GitHub.copilot-labs",
                "ms-edgedevtools.vscode-edge-devtools",
                "Continue.continue",
                "swagatachaudhuri.github-copilot-tools-pack",
                "github.copilot-workspace",
                "eamodio.gitlens",
                "ms-vscode.vscode-speech-language-pack-ru-ru",
                "hbenl.vscode-jasmine-test-adapter",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "formulahendry.auto-rename-tag",
                "formulahendry.auto-close-tag",
                "christian-kohler.path-intellisense",
                "visualstudioexptteam.vscodeintellicode",
                "usernamehw.read-only-indicator",
                "google.geminicodeassist"
            ]
        }
    },

    "workspaceFolder": "/workspaces/ERA",

    "mounts": [
        "source=${localEnv:HOME}/.ssh,target=/home/node/.ssh,type=bind,consistency=cached,readonly"
    ],

    "remoteUser": "node",
    "updateRemoteUserUID": true,

    "portsAttributes": {
        "3000": {
            "label": "Local Development",
            "onAutoForward": "notify"
        },
        "4000": {
            "label": "Remote Access",
            "onAutoForward": "notify",
            "visibility": "public"
        }
    },
    "forwardPorts": [3000, 4000]
}