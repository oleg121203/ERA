{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@client/*": ["client/src/*"],
      "@server/*": ["server/src/*"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "client/src/**/*",
    "server/src/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
