{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Update NPM",
                "Install Dependencies",
                "Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Update NPM",
            "type": "shell",
            "command": "npm install -g npm@latest",
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "npm install && npm install chokidar @types/chokidar && pip3 install --no-cache-dir -r requirements.txt",
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "npm",
            "script": "compile",
            "group": "build",
            "problemMatcher": ["$tsc"]
        }
    ]
}
