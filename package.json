{
  "name": "era",
  "displayName": "ERA Readonly Mode",
  "version": "1.0.0",
  "publisher": "era",
  "description": "Code analysis and formatting tool",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "start": "node src/main.js",
    "setup": "bash scripts/setup-env.sh",
    "format": "prettier --write \"src/**/*.{js,ts}\" --config config/.prettierrc.js",
    "lint": "eslint \"src/**/*.{js,ts}\" --config config/.eslintrc.js",
    "postinstall": "echo 'Setup completed'",
    "verify-dependencies": "node ./scripts/verify-dependencies.js",
    "generate-structure": "ts-node scripts/project-structure.ts",
    "watch-structure": "ts-node scripts/project-structure.ts --watch"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.0",
    "dotenv": "^16.0.0",
    "node-fetch": "^2.6.7",
    "axios": "^0.21.1",
    "chokidar": "^3.5.3",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.65.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0",
    "typescript": "^4.9.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "era.toggleReadonly",
        "title": "Toggle Readonly Mode"
      }
    ],
    "keybindings": [
      {
        "command": "era.toggleReadonly",
        "key": "cmd+e"
      }
    ]
  }
}

