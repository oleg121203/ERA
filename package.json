{
  "name": "era-game",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "start": "node server/src/server.js",
    "dev": "concurrently \"cd client && yarn start\" \"cd server && yarn dev\"",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "build": "tsc",
    "start:dev": "ts-node-dev --respawn --transpile-only src/server.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.13.0",
    "typescript": "^4.9.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "ts-node-dev": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.0",
    "@types/express": "^4.17.17",
    "@types/ws": "^8.5.4",
    "concurrently": "^8.0.1",
    "jest": "^29.5.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.8"
  }
}
