{
  "name": "era",
  "displayName": "ERA Readonly Mode",
  "version": "1.0.0",
  "publisher": "era",
  "description": "Code analysis and AI assistance using Google Gemini",

  "engines": {
    "vscode": "^1.96.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -p ./ && echo 'Compilation complete'",
    "test": "node ./out/test/runTest.js",
    "pytest": "python3 -m pytest",
    "structure": "ts-node scripts/project-structure.ts",
    "structure:watch": "ts-node scripts/project-structure.ts --watch",
    "setup": "yarn install && yarn add chokidar @types/chokidar && pip3 install --no-cache-dir -r requirements.txt && yarn run compile"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.0",  
    "@types/chokidar": "^2.x",         
    "chokidar": "^4.x",
    "dotenv": "^16.0.0",
    "node-fetch": "^2.6.7",
    "python-shell": "^5.x",
    "prettier": "^2.8.0",
    "eslint": "^9.16.0"
  },
  "devDependencies": {
    "@types/jest": "^29.x",
    "@types/node": "^18.x",
    "@types/vscode": "^1.80.0",
    "eslint": "^9.16.0",
    "jest": "^29.x",
    "ts-jest": "^29.x",
    "ts-node": "^10.x",
    "typescript": "^5.x",
    "prettier": "^2.8.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "era.toggleReadonly",
        "title": "Toggle Readonly Mode"
      }
    ],
    "keybindings": [
      {
        "command": "era.toggleReadonly",
        "key": "cmd+e"
      }
    ]
  }
}