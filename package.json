{
  "name": "era",
  "version": "1.0.0",
  "description": "ERA project",
  "private": true,
  "main": "dist/server/src/server.js",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "copy-ssl": "mkdir -p dist/server/src/ssl && cp -r server/src/ssl/ dist/server/src/ssl/",
    "build": "tsc && npm run copy-ssl",
    "start:backend": "cd error-fix-backend && sudo node server.js",
    "start:frontend": "cd error-fix-ui && npm start",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "dev": "ts-node-dev --respawn --transpile-only server/src/server.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "express": "^4.18.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/hpp": "^0.2.6",
    "@types/node": "^20.4.5",
    "@types/ws": "^8.5.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8"
  }
}
