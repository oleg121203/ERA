{
  "name": "era",
  "displayName": "ERA Readonly Mode",
  "version": "1.0.0",
  "publisher": "era",
  "description": "Code analysis and AI assistance using Google Gemini",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "compile": "tsc -p ./",
    "lint": "eslint .",
    "watch": "tsc -p ./ && echo 'Compilation complete'",
    "test": "node ./out/test/runTest.js",
    "pytest": "python3 -m pytest",
    "structure": "ts-node scripts/project-structure.ts",
    "structure:watch": "ts-node scripts/project-structure.ts --watch",
    "setup": "bash ./scripts/setup-env.sh && yarn install && yarn add chokidar @types/chokidar && pip3 install --no-cache-dir -r requirements.txt && yarn compile",
    "prettier": "prettier --write \"src/**/*.{js,ts,jsx,tsx,html,php,java}\"",
    "typescript": "tsc --noEmit",
    "verify-dependencies": "yarn check || yarn install --silent",
    "install-extensions": "code --install-extension google.geminicodeassist",
    "start": "node ./src/main.js",
    "fix": "eslint --fix \"src/**/*.{js,ts,jsx,tsx,java,py,html,php}\"",
    "format": "prettier --write .",
    "refactor": "ts-refactor \"src/**/*.{js,ts,jsx,tsx,java,py,html,php}\"",
    "fix:java": "eslint --fix \"src/**/*.java\"",
    "format:java": "prettier --write \"src/**/*.java\"",
    "refactor:java": "ts-refactor \"src/**/*.java\"",
    "fix:php": "phpcs --fix \"src/**/*.php\"",
    "format:php": "phpcbf \"src/**/*.php\"",
    "fix:html": "prettier --fix \"src/**/*.html\"",
    "format:html": "prettier --write \"src/**/*.html\"",
    "refactor:html": "prettier --write \"src/**/*.html\"",
    "check-types": "typescript",
    "analyze": "node src/main.js analyze",
    "setup:env": "bash ./scripts/setup-env.sh",
    "test:api": "bash -c 'source ./scripts/setup-env.sh && node scripts/test-api-runner.js'",
    "postinstall": "[ -f .env ] || [ -n \"$GEMINI_API_KEY\" ] || bash ./scripts/setup-env.sh"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "dotenv": "^16.0.0",
    "node-fetch": "^2.6.7",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@typescript-eslint/utils": "^5.50.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "glob": "^9.0.0",
    "inflight": "^1.0.6",
    "prettier": "^3.4.2",
    "rimraf": "^4.0.0",
    "typescript": "^5.7.2"
  },
  "contributes": {
    "commands": [
      {
        "command": "era.toggleReadonly",
        "title": "Toggle Readonly Mode"
      }
    ],
    "keybindings": [
      {
        "command": "era.toggleReadonly",
        "key": "cmd+e"
      }
    ]
  }
}
