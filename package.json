{
  "name": "era",
  "displayName": "ERA Readonly Mode",
  "version": "1.0.0",
  "publisher": "era",
  "description": "Code analysis and formatting tool",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "start": "node src/main.js",
    "setup": "bash scripts/setup-env.sh",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "postinstall": "npm run setup",
    "verify-dependencies": "node ./scripts/verify-dependencies.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.0",
    "dotenv": "^16.0.0",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.65.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0",
    "typescript": "^4.9.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "era.toggleReadonly",
        "title": "Toggle Readonly Mode"
      }
    ],
    "keybindings": [
      {
        "command": "era.toggleReadonly",
        "key": "cmd+e"
      }
    ]
  }
}
